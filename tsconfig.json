{
    "compilerOptions": {
      "target": "ES2017",
      "lib": ["dom", "dom.iterable", "es6"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noImplicitAny": false,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [
        {
          "name": "next"
        }
      ],
      "baseUrl": ".",
      "paths": {
        "@/*": ["./*"],
        "@/components/*": ["./components/*"],
        "@/data/*": ["./data/*"],
        "@/lib/*": ["./lib/*"],
        "@/types/*": ["./types/*"],
        "@/styles/*": ["./styles/*"],
        "@/app/*": ["./app/*"]
      }
    },
    "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      ".next/types/**/*.ts",
      "jest.d.ts",
      "jest.setup.js"
    ],
    "exclude": ["node_modules"],
    "types": ["jest", "@testing-library/jest-dom", "node"]
  }